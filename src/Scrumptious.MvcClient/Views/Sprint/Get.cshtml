
<form action="/Sprint/sort" method="get">
    <label for="ID">
        <strong>Select your Sprint #:</strong><input type="number" id="ID" name="ID" min="1" max="100" required />
    </label>
    <button type="submit">Find it!</button>
</form>
@model Scrumptious.MvcClient.Models.SprintViewModel
<form asp-action="post" asp-controller="Sprint" method="post">
    <label for="ID">
        <strong>Make a new sprint!</strong>
        <strong>Give me the sprint name: </strong>@Html.TextBoxFor(m => m.Name, new { @required = "required", @class = "form-control" })
        <strong>What is it about?</strong>@Html.TextBoxFor(m => m.SprintDescription, new { @required = "required", @class = "form-control" })
        <strong>What project (by its ID) does this sprint belong to?</strong>@Html.TextBoxFor(m => m.FkProjectId, new { @required = "required", @class = "form-control", @input = "number" })
    </label>
    <button type="submit">Make it!</button>
</form>

<h2 style="width: 100%; text-align:center">The sprint you query for displays below!</h2>
@if (ViewBag.userQuery == true)
{
    <section style="width:100%; text-align:center; padding-top: 20px">
        <div>@ViewBag.content.SprintId</div>
        <div>Name: @ViewBag.content.Name</div>
        <div>Description: @ViewBag.content.SprintDescription</div>
        <div>Is it active?: @ViewBag.content.Completed</div>
    </section>
}