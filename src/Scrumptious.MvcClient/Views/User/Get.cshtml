
<form action="/User/sort" method="get">
    <label for="ID">
        <strong>Select your UserId #:</strong><input type="number" id="ID" name="ID" min="1" max="100" required />
    </label>
    <br />
    <button type="submit">Find it!</button>
</form>
@model Scrumptious.MvcClient.Models.UserViewModel
<form asp-action="post" asp-controller="user" method="post" style="padding-top: 30px">
    <label for="ID">
        <strong>Make a new User Profile!</strong>
        <br /><strong>First Name: </strong>@Html.TextBoxFor(m => m.FirstName, new { @required = "required", @class = "form-control" })
        <strong>Last Name: </strong>@Html.TextBoxFor(m => m.LastName, new { @required = "required", @class = "form-control" })
        <strong>Email: </strong>@Html.TextBoxFor(m => m.Email, new { @required = "required", @class = "form-control" })
    </label>
    <button type="submit">Make it!</button> <br />
</form>
@if (ViewBag.userQuery == true)
{   <section style="padding-top: 30px">
    <h1>@ViewBag.content.FirstName @ViewBag.content.LastName</h1>
    <h1>@ViewBag.content.Email</h1>
    </section>
}