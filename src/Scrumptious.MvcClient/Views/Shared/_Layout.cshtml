@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
    <link href="@Url.Content("~/Content/index.css")" rel="stylesheet" type="text/css" />
    <style>        
        body{}
        nav{ width: 100%; text-align:center; padding-bottom: 100px}
        span{padding-left: 25px; padding-right:25px}
        hr{border: blue 1px solid; width: 100%}
        h1{text-align:center; width: 100%}
        footer{padding-top:25%}
        article{font-size:20px; width:100%; text-align:center}
    </style>
</head>
<body class="container-fluid">
    <header class="row">
        <h1 class="col-sm-12"><a asp-action="get" asp-controller="home">@ViewData["pagetitle"]</a></h1>
        <article>Your online Scrum assistant!</article>
        <hr>

        <nav class="col-sm-12">


            <span><a href="/project">Project</a></span>
            <span><a href="/sprint">Sprints</a></span>
            <span><a href="/backlog">Backlog</a></span>
            <span><a href="/task">Task</a></span>
            <span><a href="/user">Users</a></span>
            <span><a href="/step">Steps</a></span>


        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer class="text-center">
        <small class="col-sm-12 text-center">
            Copyright &copy; 2018 Scrumptious Inc., All Rights Reserved.
        </small>
    </footer>
    @section Scripts
        {
        <link href="~/Content/index.css" rel="stylesheet" />
    }
</body>
</html>
